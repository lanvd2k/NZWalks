@model IEnumerable<NZWalks.Web.Models.DTO.WalkDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Walk List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Walk" asp-action="CreateWalk" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Walk</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Length</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Length</td>
                    <td>
                        <a asp-controller="Walk" asp-action="UpdateWalk" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Walk" asp-action="DeleteWalk" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>