@model NZWalks.Web.Models.DTO.RegionDTO

<form asp-action="DeleteRegion">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Region</h1>
        <hr />
        @*<input hidden asp-for="Id" />*@
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Code" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Code" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Area" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Area" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Lat" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Lat" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Long" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Long" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Population" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Population" disabled class="form-control" />
            </div>



            <div class="col-5">
                <a asp-action="IndexRegion" asp-controller="Region" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}